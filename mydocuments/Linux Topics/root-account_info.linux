#!/bin/bash
rm /var/tmp/root_account_expire.csv
cat /etc/passwd | grep root | grep -v + > /dev/null 2>&1
if [ $? = 0 ]
then
ROOT=`chage -l root | grep -i "password expires" | awk '{print $1" "$2" "$3" "$4" "$5" "$6" "$7" "$8}'`
else
ROOT=NA
fi
echo `uname -n`,$ROOT >> /var/tmp/root_account_expire.csv
